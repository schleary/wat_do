<h2>Find a Thing</h2>

<%= bootstrap_form_for @query, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-4", url: {action: "create"}  do |f| %>
  <%= f.number_field :price, prepend: "$", append: ".00"  %>
  <%= f.number_field :distance , append: "miles" %>
  <%= f.submit "Submit" %>
<% end %>
